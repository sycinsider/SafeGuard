<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/activity_traffic_item_iv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_contact" />

    <TextView
        android:id="@+id/activity_traffic_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/activity_traffic_item_iv"
        android:lines="1"
        android:text="aaa"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/activity_traffic_item_tv_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/activity_traffic_item_iv"
        android:text="aaa"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activity_traffic_item_tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="aaa"
        android:textSize="15sp" />

</RelativeLayout>