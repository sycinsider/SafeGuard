<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mobileguard.activity.AntiTheftGuide1Activity" >

    <TextView
        style="@style/GuideActionbarTheme"
        android:text="5.恭喜您设置完成" />
	<CheckBox 
	    android:id="@+id/anti_theft_guide5_cb"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="15dp"
	    android:text="选中开启手机防盗"
	    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/step_5" />

        <Button
            style="@style/GuideRightButton"
            android:drawableRight="@drawable/next"
            android:onClick="goNext"
            android:text="设置完成" />

        <Button
            style="@style/GuideLeftButton"
            android:drawableLeft="@drawable/pre"
            android:onClick="goPre"
            android:text="上一步" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp" >

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_nomal" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_nomal" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_nomal" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_nomal" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_selected" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>