<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActionbarTheme">

        <!-- 标题栏theme. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#399AD6</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="GuideActionbarTheme" parent="ActionbarTheme">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="NomalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="GuideLargeText" parent="NomalText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="GuideSmallText" parent="GuideLargeText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NomalButton">
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/enter_btn_selector</item>
    </style>

    <style name="GuideRightButton" parent="NomalButton">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="GuideLeftButton" parent="NomalButton">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="LocationDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="StorageStatusPBStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="@android:progressDrawable">@drawable/storage_progress</item>
    </style>

    <style name="LoadingProgressStyle" parent="@android:Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/load_progress_bar</item>
    </style>

    <style name="PopupAnimationDialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_method_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_method_exit</item>
    </style>

    <style name="widget_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff000000</item>
    </style>

</resources>